<h1>シアター</h1>
<p><%= notice %></p>

<div class="video-container" style="display: flex; flex-direction: column; align-items: center; margin-top: 20px;">
  <div style="width: 100%; max-width: 800px;">
    <%= render @video %>
  </div>
  <% if @video.video.attached? %>
    <div style="width: 100%; max-width: 800px; aspect-ratio: 16 / 9; position: relative; overflow: hidden; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); margin-top: 20px;">
      <video src="<%= rails_blob_path(@video.video) %>" type="video/mp4" controls style="width: 100%; height: 100%; object-fit: contain; background-color: black;"></video>
    </div>
  <% end %>
</div>

<div style="text-align: center; margin-top: 20px;">
  <%= link_to "Edit this video", edit_video_path(@video), class: "btn btn-primary" %>
  <%= link_to "Back to videos", videos_path, class: "btn btn-secondary", style: "margin-right: 10px;" %>
  
</div>